<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item android:id="@android:id/background">
    <shape>
        <corners android:radius="8dp"/>
        <solid android:color="#e0f0fb"/>
    </shape>
</item>

<item android:id="@android:id/progress"
      android:top="1dp"
      android:bottom="1dp"
      android:left="1dp"
      android:right="1dp">

<scale android:scaleWidth="100%">
    <shape>
        <corners android:radius="8dp"/>
        <gradient
                android:type="linear"
                android:startColor="#3057a4"
                android:endColor="#2283c6"
                android:angle="0"/>
    </shape>
</scale>
</item>
</layer-list>