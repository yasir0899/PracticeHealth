<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:id="@+id/clChild"
                                                   android:background="@color/white"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:id="@+id/tvChild"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="16dp"
            android:padding="@dimen/padding_10dp"
            android:singleLine="true"
            android:text="@string/level"
            android:textSize="@dimen/text_view_size_18sp"
            android:textColor="@color/sub_level_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/tvWeight" android:layout_marginRight="8dp"
    />


    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dark_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/viewNewPractice"
            app:layout_constraintTop_toBottomOf="@+id/tvChild" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="16dp"/>

    <TextView
            android:id="@+id/tvWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_23"
            android:textColor="@color/sub_level_text_color"
            android:textSize="@dimen/text_view_size_18sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvChild"
            app:layout_constraintTop_toTopOf="@+id/tvChild"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>