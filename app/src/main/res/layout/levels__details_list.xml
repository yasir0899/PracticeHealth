<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
            android:text="Level 1"
            android:layout_width="0dp"

            android:singleLine="true"

            android:layout_height="wrap_content"
            android:id="@+id/tvLevelDetails"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/tvWeight"
            android:layout_marginRight="8dp" />

    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/viewNewPractice"
            app:layout_constraintTop_toBottomOf="@+id/tvLevelDetails" />

    <TextView
            android:text="23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWeight"
            app:layout_constraintBottom_toBottomOf="@+id/tvLevelDetails"
            app:layout_constraintTop_toTopOf="@+id/tvLevelDetails"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>